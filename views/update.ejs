<%- include('partials/header') %> <%- include('partials/head') %>

<!-- update.ejs -->
<link rel="stylesheet" href="/css/styles.css" />

<form action="/business_list/<%= contact._id %>/update" method="POST">
  <h1>Update Contact</h1>
  <div class="form_div">
    <label for="name">Name:</label>
    <input
      type="text"
      id="name"
      name="username"
      value="<%= contact.username %>"
      required
    />
  </div>
  <div class="form_div">
    <label for="contactNumber">Phone Number:</label>
    <input
      type="text"
      id="contactNumber"
      name="contactNumber"
      value="<%= contact.contactNumber %>"
      required
    />
  </div>
  <div class="form_div">
    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= contact.email %>"
      required
    />
  </div>
  <div>
    <button class="buttonsmall" type="submit">Update</button>
    <button>
      <a href="/business_list">Cancel</a>
    </button>
  </div>
</form>

<form action="/business_list/<%= contact._id %>/delete" method="POST">
  <button class="buttonsmall" type="submit">Delete</button>
</form>

<%-include('partials/footer') %>
